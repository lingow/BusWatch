<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoPanelHeight="@dimen/bottomPaneHeight">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lingoware.lingow.buswatch.app.MainActivity"
        tools:layout="@layout/activity_main" />

    <com.lingoware.lingow.buswatch.app.NonSwipeableViewPager
        android:id="@+id/route_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.lingoware.lingow.buswatch.app.NonSwipeableViewPager>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>

